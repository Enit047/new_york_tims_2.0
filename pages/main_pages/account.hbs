<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login" >Log in</a></li>
            <li class="tab col s6"><a href="#signup">Sign up</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h3>Login account</h3>

        {{#if errorLogin}}
            <p class="error_alert">{{errorLogin}}</p>
        {{/if}}

        <form action="/account/login" method="post">
            <div class="input-field mt-2">
                <input id="email" type="email" name="email">
                <label for="email">Email</label>
            </div>
            <div class="input-field mt-2">
                <input id="password" type="password" name="password">
                <label for="password">Password</label>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <p><a href="/account/recover-password">Forgot password?</a></p>

            <button class="btn cyan darken-2">Sign in</button>
        </form>
    </div>

    <div id="signup" class="col s6 offset-s3">
        <h3>Sign up account</h3>

        {{#if errorSignup}}
            <p class="error_alert">{{errorSignup}}</p>
        {{/if}}

        <form action="/account/signup" method="post">
            <div class="input-field mt-2">
                <input id="name" type="text" name="name">
                <label for="name">Name</label>
            </div>
            <div class="input-field mt-2">
                <input id="email" type="email" name="email">
                <label for="email">Email</label>
            </div>
            <div class="input-field mt-2">
                <input id="password" type="password" name="password">
                <label for="password">Password</label>
            </div>
            <div class="input-field mt-2">
                <input id="confirm_password" type="password" name="confirm_password">
                <label for="confirm_password">Confirm passoword</label>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn cyan darken-2">Sign in</button>
        </form>
    </div>
</div>